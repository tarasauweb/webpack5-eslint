{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env": {
      "browser": true,
      "es2021": true
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["./webpack.config.js", "**/vendor/*.js"],
  "plugins": ["@typescript-eslint"],
  "root": true
}